<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.viken.constraintlayoutpractice">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".alarm_manager.AlarmManagerActivity"
            android:exported="true" />
        <activity
            android:name=".MultiNavViewActivity"
            android:exported="true" />
        <activity
            android:name=".ScanViewTitle"
            android:exported="true" />
        <activity android:name=".ScanMenusActivity" />
        <activity android:name=".DrawerLayoutActivity" />
        <activity android:name=".SafetySeekBarActivity" />
        <activity android:name=".DeleteUserActivity" />
        <activity android:name=".ListUsersActivity" />
        <activity
            android:name=".EditUserActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".AddUserActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".UserAdministrationActivity" />
        <activity android:name=".CustomHorizontalProgressBar" />
        <activity
            android:name=".LoginActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RadiationWarning"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name=".alarm_manager.AlertManager"/>
        <receiver android:name=".alarm_manager.AlarmManagerActivity$AnotherAlertManager"/>

    </application>

</manifest>